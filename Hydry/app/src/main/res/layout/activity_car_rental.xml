<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.CarRentalActivity">

    <TextView
        android:id="@+id/HertzTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="34dp"
        android:text="Hertz"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="134dp"
        android:layout_height="63dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:text="Accept any driving licence with NAATI translation."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HertzTitle" />

    <TextView
        android:id="@+id/EuropcarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="166dp"
        android:text="Europcar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="135dp"
        android:layout_height="61dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="17dp"
        android:text="Usually a little bit cheaper."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EuropcarTitle" />

    <TextView
        android:id="@+id/AvisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="296dp"
        android:text="Avis"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="142dp"
        android:layout_height="88dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="32dp"
        android:text="Accept international driving license only."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AvisTitle" />

    <ImageButton
        android:id="@+id/EuropButton"
        android:layout_width="80dp"
        android:layout_height="83dp"
        android:src="@drawable/europcar"
        app:layout_constraintLeft_toRightOf="@+id/EuropcarTitle"
        android:layout_marginLeft="159dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="166dp"
        android:onClick="toEuropcar"/>

    <ImageButton
        android:id="@+id/HertzButton"
        android:layout_width="81dp"
        android:layout_height="72dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/hertz"
        app:layout_constraintLeft_toRightOf="@+id/HertzTitle"
        android:layout_marginLeft="182dp"
        android:onClick="toHertz"/>

    <ImageButton
        android:id="@+id/AvisButton"
        android:layout_width="82dp"
        android:layout_height="77dp"
        android:src="@drawable/avis"
        app:layout_constraintLeft_toRightOf="@+id/AvisTitle"
        android:layout_marginLeft="190dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="313dp"
        android:onClick="toAvis"/>

</android.support.constraint.ConstraintLayout>
