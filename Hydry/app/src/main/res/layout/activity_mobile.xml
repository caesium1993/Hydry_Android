<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.MobileActivity">

    <TextView
        android:id="@+id/text_mobile_description"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:text="The main telecommunication compannies in Australia
         and common plans for various purposes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.019"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/text_mobile_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:shrinkColumns="0,1,2,3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/blank1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_column="0"/>

            <TextView
                android:id="@+id/text_telstra"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Telstra"
                android:layout_column="1"/>

            <TextView
                android:id="@+id/text_vodafone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_column="2"
                android:text="Vodafone" />

            <TextView
                android:id="@+id/text_optus"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_column="3"
                android:text="Optus" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/blank2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:text="" />

            <TextView
                android:id="@+id/text_telstra_des"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_column="1"
                android:text="high-quality" />

            <TextView
                android:id="@+id/text_vodafone_des"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_column="2"
                android:text="economic" />

            <TextView
                android:id="@+id/text_optus_des"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_column="3"
                android:text="fast" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_prepaid"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_column="0"
                android:text="Prepaid\n(best for travellers)" />

            <TextView
                android:id="@+id/text_telstra_pre"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="free/$10/$30 SIM for tablets or mobiles"
                android:layout_column="1" />

            <TextView
                android:id="@+id/text_vodafone_pre"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="$25 for 12GB data\n(half price now!)" />

            <TextView
                android:id="@+id/text_optus_pre"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="1GB for $2/day\n$30 SIM with 14GB" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:collapseColumns="1,2,3">
            <TextView
                android:id="@+id/text_postpaid"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_column="0"
                android:text="Postpaid\n(best for long-term use)" />
            <TextView
                android:id="@+id/text_telstra_post"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="$49/$59/$79/$99 plan with 10/15/20/30GB data"
                android:layout_column="1" />

            <TextView
                android:id="@+id/text_vodafone_post"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="$30/$45/$55 12-month plan with 2/17/20GB data" />

            <TextView
                android:id="@+id/text_optus_post"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="$25/$40/$70 12-month plan with 3/15/25GB data" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
