<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFF08080"
    tools:context="com.example.hydry.MobileActivity">

    <TextView
        android:id="@+id/text_mobile_desp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#FFF5EE"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:text="The main SIM plans are provided by different telecommunication companies for various customers"
        android:layout_alignParentTop="true" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_mobile_desp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/tableLayout"
                android:text="" />

            <TextView
                android:id="@+id/text_prepaid"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#A0522D"
                android:typeface="serif"
                android:text="Prepaid" />

            <TextView
                android:id="@+id/text_postpaid"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#A0522D"
                android:typeface="serif"
                android:textSize="20dp"
                android:text="Postpaid" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="" />

            <TextView
                android:id="@+id/text_pre_des"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="italic"
                android:textColor="#A0522D"
                android:text="for travellers" />

            <TextView
                android:id="@+id/text_post_des"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textStyle="italic"
                android:textColor="#A0522D"
                android:text="for long-term use" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_company_0"
                android:layout_width="70dp"
                android:textColor="#A0522D"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/text_prepaid_0"
                android:layout_width="140dp"
                android:textColor="#FFF5EE"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="" />

            <TextView
                android:id="@+id/text_postpaid_0"
                android:layout_width="140dp"
                android:textColor="#FFF5EE"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_company_1"
                android:layout_width="70dp"
                android:textColor="#A0522D"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="18dp"
                android:text="" />

            <TextView
                android:id="@+id/text_prepaid_1"
                android:layout_width="140dp"
                android:textColor="#FFF5EE"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="" />

            <TextView
                android:id="@+id/text_postpaid_1"
                android:layout_width="140dp"
                android:textColor="#FFF5EE"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/text_company_2"
                android:layout_width="70dp"
                android:textColor="#A0522D"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="serif"
                android:textSize="20dp"
                android:text=""/>

            <TextView
                android:id="@+id/text_prepaid_2"
                android:layout_width="140dp"
                android:textColor="#FFF5EE"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text=""  />

            <TextView
                android:id="@+id/text_postpaid_2"
                android:layout_width="140dp"
                android:textColor="#FFF5EE"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text=""  />
        </TableRow>

    </TableLayout>

</RelativeLayout>