<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.ShakeActivity">

    <TextView
        android:id="@+id/shakeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shake your phone to see our recommendation！"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/shakeLogo"
        android:layout_width="254dp"
        android:layout_height="123dp"
        android:src="@drawable/shake"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="143dp"
        app:layout_constraintTop_toBottomOf="@+id/shakeDescription" />
</android.support.constraint.ConstraintLayout>
