<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_arrivied_menu"
    tools:context="com.example.hydry.TravelPlanActivity">

    <Button
        android:id="@+id/button_visa"
        android:layout_width="214dp"
        android:layout_height="263dp"
        android:text="Visa"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="1dp"
        android:onClick="toVisa"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_flight"
        android:layout_width="145dp"
        android:layout_height="188dp"
        android:text="Flight"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_visa"
        android:layout_marginLeft="4dp"
        app:layout_constraintHorizontal_bias="0.583"
        tools:layout_editor_absoluteX="236dp" />

    <Button
        android:id="@+id/button_fqa"
        android:layout_width="139dp"
        android:layout_height="326dp"
        android:text="FQA"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_flight"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/button_visa"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="236dp"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintVertical_bias="0.333"
        tools:layout_editor_absoluteY="197dp" />

    <Button
        android:id="@+id/button_accommodation"
        android:layout_width="219dp"
        android:layout_height="222dp"
        android:text="Accommo-\ndation"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_fqa"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_visa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
