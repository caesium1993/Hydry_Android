<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_arrivied_menu"
    tools:context="com.example.hydry.TravelPlanActivity">

    <Button
        android:id="@+id/button_visa"
        android:layout_width="200dp"
        android:layout_height="363dp"
        android:text="Visa"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:onClick="toVisa"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button_flight"
        android:layout_width="154dp"
        android:layout_height="192dp"
        android:text="Flight"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="220dp" />

    <Button
        android:id="@+id/button_fqa"
        android:layout_width="154dp"
        android:layout_height="420dp"
        android:text="FQA"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button_accommodation"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:text="Accommo-\ndation"
        android:textColor="#FFFFF0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_fqa"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/button_visa"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteY="271dp" />
</android.support.constraint.ConstraintLayout>
