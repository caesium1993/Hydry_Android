<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.VisaActivity">

    <TextView
        android:id="@+id/visaDescription2"
        android:layout_width="356dp"
        android:layout_height="80dp"
        android:text="All the detailed processes can be found here:"
        android:layout_marginLeft="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="81dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription1" />

    <TextView
        android:id="@+id/visaDescription1"
        android:layout_width="314dp"
        android:layout_height="64dp"
        android:text="Apply for your visitor visa at least 1 month before departure!"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/visaButton"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:src="@drawable/visawebsite"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription2"
        android:onClick="toVisaWebsite"/>
</android.support.constraint.ConstraintLayout>
