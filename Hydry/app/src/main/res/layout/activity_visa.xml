<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.VisaActivity">

    <TextView
        android:id="@+id/visaDescription2"
        android:layout_width="346dp"
        android:layout_height="42dp"
        android:text="All the detailed processes can be found here:"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription5" />

    <TextView
        android:id="@+id/visaDescription1"
        android:layout_width="314dp"
        android:layout_height="64dp"
        android:text="Apply for your visitor visa at least 1 month before departure!"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/visaButton"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:src="@drawable/visawebsite"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="toVisaWebsite"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription2" />

    <TextView
        android:id="@+id/visaDescription3"
        android:layout_width="316dp"
        android:layout_height="120dp"
        android:text="If you travel with travel agency, your visa application should be processed by the agency.\nOtherwise, you can either make an online application or a face-to-face application  at an authorised local office."
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription1" />

    <TextView
        android:id="@+id/visaDescription4"
        android:layout_width="341dp"
        android:layout_height="94dp"
        android:layout_marginLeft="8dp"
        android:text="Basic documents you need when apply for the visa:\nPassport, passport photo, bank account statement, income certification."
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription3" />

    <TextView
        android:id="@+id/visaDescription5"
        android:layout_width="342dp"
        android:layout_height="27dp"
        android:text="Application fee needed."
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/visaDescription4" />
</android.support.constraint.ConstraintLayout>
