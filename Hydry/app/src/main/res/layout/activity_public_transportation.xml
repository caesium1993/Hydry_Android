<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.PublicTransportationActivity">

    <TextView
        android:id="@+id/ptStep1"
        android:layout_width="135dp"
        android:layout_height="103dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="37dp"
        android:text="First, you need a myki card($6), which is available at any 7-11 or train station."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ptStep2"
        android:layout_width="135dp"
        android:layout_height="106dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="178dp"
        android:text="Then, find your way at Ptv---your one-stop-shop for Victorian public transport."
        app:layout_constraintLeft_toLeftOf="@+id/ptStep1"
        app:layout_constraintTop_toBottomOf="@+id/ptStep1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/myki"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintLeft_toRightOf="@+id/ptStep1"
        android:layout_marginLeft="40dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="82dp"
        android:layout_height="87dp"
        android:src="@drawable/ptv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="307dp"
        app:layout_constraintLeft_toRightOf="@+id/ptStep2"
        android:layout_marginLeft="80dp"
        android:onClick="toPtv"/>
</android.support.constraint.ConstraintLayout>
