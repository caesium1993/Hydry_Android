<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.TransportActivity"
    tools:layout_editor_absoluteY="73dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageButton
        android:id="@+id/ptvButton"
        android:layout_width="82dp"
        android:layout_height="87dp"
        android:onClick="toPtv"
        android:src="@drawable/ptv"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toBottomOf="@+id/publicTransportationTitle"
        android:layout_marginLeft="227dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/ptvDescription"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:text="Then, find your way at Ptv."
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/publicTransportationTitle"
        app:layout_constraintLeft_toRightOf="@+id/mykiDescription"
        android:layout_marginLeft="64dp" />

    <ImageView
        android:id="@+id/mykiImage"
        android:layout_width="131dp"
        android:layout_height="78dp"
        android:src="@drawable/myki"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="98dp"
        app:layout_constraintTop_toBottomOf="@+id/publicTransportationTitle" />

    <TextView
        android:id="@+id/mykiDescription"
        android:layout_width="133dp"
        android:layout_height="58dp"
        android:text="First, get a myki at any 7-11 or train station."
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/publicTransportationTitle"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/avisButton"
        android:layout_width="82dp"
        android:layout_height="77dp"
        android:onClick="toAvis"
        android:src="@drawable/avis"
        android:layout_marginTop="158dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="277dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/europcarButton"
        android:layout_width="80dp"
        android:layout_height="83dp"
        android:onClick="toEuropcar"
        android:src="@drawable/europcar"
        android:layout_marginTop="162dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="147dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/hertzButton"
        android:layout_width="81dp"
        android:layout_height="72dp"
        android:onClick="toHertz"
        android:src="@drawable/hertz"
        android:layout_marginTop="163dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/avisDescription"
        android:layout_width="99dp"
        android:layout_height="86dp"
        android:text="Accept international driving license only."
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="269dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/avisTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avis"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="312dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/europcarDescription"
        android:layout_width="79dp"
        android:layout_height="91dp"
        android:text="Usually a little bit cheaper."
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="147dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/europcarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Europcar"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="147dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/hertzDescription"
        android:layout_width="96dp"
        android:layout_height="83dp"
        android:text="Accept any driving licence with NAATI translation."
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/hertzTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hertz"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/carRentalTitle"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/publicTransportationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Public Transportation"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/carRentalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Rental"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/mykiImage" />

</android.support.constraint.ConstraintLayout>
