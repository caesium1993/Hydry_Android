<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context="com.example.hydry.MainMenuActivity">

    <Button
        android:id="@+id/plan_to_go"
        android:layout_width="226dp"
        android:layout_height="62dp"
        android:text="Plan to go"
        android:onClick="toPlanToGo"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="60px"
        android:textColor="#FFFFFF"
        android:layout_marginTop="97dp"
        android:layout_marginLeft="79dp"
        android:backgroundTint="#000000"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

    <Button
        android:id="@+id/arrived"
        android:layout_width="226dp"
        android:layout_height="62dp"
        android:text="Arrived"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="79dp"
        android:onClick="toArrived"
        android:textSize="60px"
        android:textColor="#FFFFF0"
        android:backgroundTint="#000000"
        android:layout_marginTop="118dp"

        app:layout_constraintTop_toBottomOf="@+id/plan_to_go">
    </Button>

</android.support.constraint.ConstraintLayout>
