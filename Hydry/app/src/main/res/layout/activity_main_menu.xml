<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context="com.example.hydry.MainMenuActivity">

    <Button
        android:id="@+id/plan_to_go"
        android:layout_width="290dp"
        android:layout_height="145dp"
        android:text="Plan to go"
        android:onClick="toPlanToGo"
        android:textSize="60px"
        android:textColor="#FFFFF0"
        android:background="#4F778899"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp">
    </Button>

    <Button
        android:id="@+id/arrived"
        android:layout_width="290dp"
        android:layout_height="145dp"
        android:text="Arrived"
        android:onClick="toArrived"
        android:textSize="60px"
        android:textColor="#FFFFF0"
        android:background="#4F778899"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/plan_to_go"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.263">
    </Button>

</android.support.constraint.ConstraintLayout>
