<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:layout_height="140dp">
        <ImageView android:id="@+id/worthitemimage"
            android:layout_width="100dp" android:layout_height="fill_parent"
            android:layout_alignParentTop="true" android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:padding="0dip" />
        <TextView android:id="@+id/worthitemtitle"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/worthitemimage"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true"
            android:padding="5dip"
            android:textStyle="bold"
            android:layout_alignWithParentIfMissing="true" android:gravity="center_vertical"
            android:textSize="18dip" />
        <TextView android:id="@+id/worthitemdescription"
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/worthitemimage"
            android:layout_below="@+id/worthitemtitle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:ellipsize="marquee"
            android:padding="5dip"
            android:textSize="15dip" />
    </RelativeLayout>

</LinearLayout>