<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.AfterShake_4Activity">

    <TextView
        android:id="@+id/restaurant4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Donwoori"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurantAddress4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="276 Victoria Street, North Melbourne, Melbourne"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurant4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/restaurantDescription4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korean BBQ in a simple dining space."
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/Donwoori1"
        android:layout_width="172dp"
        android:layout_height="117dp"
        android:src="@drawable/donwoori1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription4"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/Donwoori2"
        android:layout_width="148dp"
        android:layout_height="116dp"
        android:src="@drawable/donwoori2"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription4"
        android:layout_marginLeft="210dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/Donwoori3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/donwoori3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Donwoori1" />

    <ImageView
        android:id="@+id/Donwoori4"
        android:layout_width="167dp"
        android:layout_height="202dp"
        android:src="@drawable/donwoori4"
        android:layout_marginLeft="201dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Donwoori1" />
</android.support.constraint.ConstraintLayout>
