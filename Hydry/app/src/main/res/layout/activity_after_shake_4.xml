<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.AfterShake_4Activity">

    <TextView
        android:id="@+id/restaurant4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:typeface="serif"
        android:textSize="25dp"
        android:text="Donwoori"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restaurantAddress4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="276 Victoria Street, North Melbourne, Melbourne"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurant4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/restaurantDescription4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korean BBQ in a simple dining space."
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress4"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/Donwoori1"
        android:layout_width="141dp"
        android:layout_height="188dp"
        android:src="@drawable/donwoori1"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Donwoori4"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/Donwoori4"
        tools:layout_editor_absoluteY="305dp" />

    <ImageView
        android:id="@+id/Donwoori2"
        android:layout_width="185dp"
        android:layout_height="173dp"
        android:src="@drawable/donwoori2"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription4"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/Donwoori3"
        android:layout_width="159dp"
        android:layout_height="213dp"
        android:src="@drawable/donwoori3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/Donwoori2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Donwoori2" />

    <ImageView
        android:id="@+id/Donwoori4"
        android:layout_width="142dp"
        android:layout_height="170dp"
        android:src="@drawable/donwoori4"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription4"
        android:layout_marginLeft="212dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
