<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.AfterShake_1Activity">

    <TextView
        android:id="@+id/restaurant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Universal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/restaurantAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="139-141 Lygon Street, Carlton, Melbourne"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurant1" />

    <TextView
        android:id="@+id/restaurantDescription1"
        android:layout_width="296dp"
        android:layout_height="49dp"
        android:text="Authentic Italian cooking style and substantial meals at an affordable price."
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress1"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/universalImage1"
        android:layout_width="147dp"
        android:layout_height="118dp"
        android:src="@drawable/universal1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="127dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription1" />

    <ImageView
        android:id="@+id/universalImage2"
        android:layout_width="140dp"
        android:layout_height="139dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/universal2"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription1"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/universalImage3"
        android:layout_width="133dp"
        android:layout_height="207dp"
        android:src="@drawable/universal3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/universalImage1"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/universalImage1" />

    <ImageView
        android:id="@+id/universalImage4"
        android:layout_width="113dp"
        android:layout_height="232dp"
        android:src="@drawable/universal4"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/universalImage2"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="@+id/universalImage2" />
</android.support.constraint.ConstraintLayout>
