<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hydry.AfterShake_1Activity">

    <TextView
        android:id="@+id/restaurant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Universal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/restaurantAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="139-141 Lygon Street, Carlton, Melbourne"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurant1" />

    <TextView
        android:id="@+id/restaurantDescription1"
        android:layout_width="225dp"
        android:layout_height="59dp"
        android:text="Authentic Italian cooking style and substantial meals at an affordable price."
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/universalImage1"
        android:layout_width="151dp"
        android:layout_height="115dp"
        android:src="@drawable/universal1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription1" />

    <ImageView
        android:id="@+id/universalImage2"
        android:layout_width="110dp"
        android:layout_height="178dp"
        android:layout_marginLeft="231dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/universal2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription1" />

    <ImageView
        android:id="@+id/universalImage3"
        android:layout_width="132dp"
        android:layout_height="168dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/universal3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/universalImage1" />

    <ImageView
        android:id="@+id/universalImage4"
        android:layout_width="132dp"
        android:layout_height="113dp"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="98dp"
        android:src="@drawable/universal4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/universalImage1" />
</android.support.constraint.ConstraintLayout>
