<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFD2691E"
    tools:context="com.example.hydry.AfterShake_1Activity">

    <TextView
        android:id="@+id/restaurant1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Universal"
        android:textColor="#600000"
        android:typeface="serif"
        android:textSize="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/restaurantAddress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#FFF5EE"
        android:text="139-141 Lygon Street, Carlton, Melbourne"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurant1" />

    <TextView
        android:id="@+id/restaurantDescription1"
        android:layout_width="350dp"
        android:layout_height="78dp"
        android:textColor="#FFF5EE"
        android:text="Authentic Italian cooking style and substantial meals at an affordable price."
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantAddress1"
        android:layout_marginLeft="17dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/universalImage1"
        android:layout_width="147dp"
        android:layout_height="118dp"
        android:src="@drawable/universal1"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription1" />

    <ImageView
        android:id="@+id/universalImage2"
        android:layout_width="140dp"
        android:layout_height="139dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/universal2"
        app:layout_constraintTop_toBottomOf="@+id/restaurantDescription1"
        android:layout_marginRight="38dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/universalImage3"
        android:layout_width="148dp"
        android:layout_height="214dp"
        android:src="@drawable/universal3"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/universalImage1"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/universalImage1"
        tools:layout_editor_absoluteY="371dp" />

    <ImageView
        android:id="@+id/universalImage4"
        android:layout_width="113dp"
        android:layout_height="232dp"
        android:src="@drawable/universal4"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/universalImage2"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="@+id/universalImage2" />
</android.support.constraint.ConstraintLayout>
